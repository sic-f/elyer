article.media
  figure.media-left
    p.image
      = image_tag user_thumbnail(comment.user_avatar)
  .media-content
    .content
      p.comment-content
        strong = full_name_for(comment.user)
        small.ml-2 = time_ago_in_words Time.now
        br
        = comment.content

    - if authorized_to_perform_operations_on? comment
      nav.level.is-mobile
        .level-left
          = link_to 'Delete',
                    comment,
                    class: 'level-item help is-marginless mr-2',
                    method: :delete,
                    data: { confirm: 'Delete comment?' }

          = link_to 'Edit',
                    edit_comment_path(comment),
                    class: 'level-item help is-marginless'
