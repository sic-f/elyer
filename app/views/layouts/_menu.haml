%aside.menu.is-hidden-mobile
  %p.menu-label
    = link_to 'Home', root_path
  - if signed_in?
    %p.menu-label Account
    %ul.menu-list
      %li
        = link_to 'Profile', current_user, class: 'menu-item profile-link'
  - if signed_in?
    %p.menu-label Places
    %ul.menu-list
      %li
        = link_to 'Your Contributions',
                  places_user_path(current_user),
                  class: 'menu-item user-contributions-link'
